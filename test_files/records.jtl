const LinkedList = record {
    var element: int
    var next: ^LinkedList
}

const main = proc() -> int {
    var vec = Vec3(1, 2, 3)
    var vec_copy = vec
    let b = vec.x
    vec.y = b

    var vec2 = @Vec3(3, 2, 1)
    let y = @vec2.y // take address of field without explicitly dereferencing
    y^ = -2
    vec2.z = 3

//    let c = vec.length_square()
    var a = LinkedList(1, cast(^LinkedList, 0))
    var bb = LinkedList(2, @a)
    a.next = @bb
    return 1
}

